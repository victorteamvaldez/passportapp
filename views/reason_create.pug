extends layout

block content

        h1=title

        form(method='POST' action='')
            div.form-group
                label(for="name") Reason:
                input#name.form-control(type='text', placeholder="First passport", name='name', value=(undefined===reason ? '' : reason.name))
            button.btn.btn-primary(type='submit') Create Reason

        if errors
            ul
                for error in errors
                    li!=error.msg